{
  "name": "sms-sender-api",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "engines": {
    "node": "^16"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "endOfLine": "lf",
    "semi": true,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "scripts": {
    "clean": "rm -rf node_modules/",
    "build": "tsc",
    "start": "cross-env TZ=UTC PORT=8090 NODE_ENV=development nodemon -e ts,js,json --exec node -r ts-node/register --inspect=:9228 src/server.ts",
    "init:db:test": "docker-compose --file ./db/docker-compose.yml up --detach && cross-env TZ=UTC NODE_ENV=unittest ts-node ./db/scripts/create-database.ts",
    "test": "cross-env NODE_ENV=unittest jest --verbose --detectOpenHandles --config=jest.config.js",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "~0.21.2",
    "bcryptjs": "~2.4.3",
    "config-dug": "~1.7.1",
    "cors": "~2.8.5",
    "date-fns": "~2.16.1",
    "date-fns-tz": "~1.3.4",
    "express": "~4.17.1",
    "express-mung": "~0.5.1",
    "express-print-routes": "~1.0.0",
    "joi": "~17.6.0",
    "jsonwebtoken": "~8.5.1",
    "uuid": "~7.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "~2.4.2",
    "@types/cors": "~2.8.6",
    "@types/express": "~4.17.2",
    "@types/express-mung": "~0.5.2",
    "@types/jest": "~27.0.2",
    "@types/jest-when": "~2.7.2",
    "@types/jsonwebtoken": "~8.3.5",
    "@types/nock": "~11.1.0",
    "@types/node": "~16.0.0",
    "@types/supertest": "~2.0.11",
    "@types/uuid": "~3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "cross-env": "~7.0.3",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^13.0.0",
    "husky": "~4.3.8",
    "jest": "~27.3.1",
    "jest-auto-stub": "~1.0.8",
    "jest-node-exports-resolver": "~1.1.2",
    "jest-when": "~3.2.1",
    "lint-staged": "~10.5.4",
    "nodemon": "~1.19.4",
    "prettier": "~2.3.0",
    "source-map-support": "~0.5.19",
    "supertest": "~6.2.1",
    "ts-jest": "~27.0.7",
    "ts-node": "~8.8.1",
    "typescript": "~4.2.0",
    "uuid-validate": "~0.0.3"
  }
}
